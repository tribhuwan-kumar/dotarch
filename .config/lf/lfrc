# Basic Settings
set icons true
set hidden true
set reverse true
set ignorecase true
set sortby ctime

# CTPV
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.rar) unrar e "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}
    trashbhuwan -p "$(basename "$file")" 
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}
    trashbhuwan -r "$(basename "$file")" 
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done 
}}

cmd delete_trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}
    trashbhuwan -dl "$(basename "$file")" 
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done 
}}

# Basic Functions
map au unarchive
map r rename
map . set hidden!
map ad trash
map ar restore_trash
map ald delete_trash
map p paste
map x cut
map y copy
map J :toggle; down
map K :toggle; up 
map <enter> open
map <esc> unselect
map q quit
map R reload
map aa mkfile
map aA mkdir

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gm cd ~/Music
map gc cd ~/.config
map gr cd ~/Desktop/Repos
map gv cd ~/Videos
map gs cd /mnt/dex/media
map gt cd ~/.local/share/Trash/files
