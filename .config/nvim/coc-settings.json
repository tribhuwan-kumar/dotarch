{
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
        }
    },
    "diagnostic.enable": true,
    "diagnostic.level": "hint",
    "diagnostic.signLevel": "information",
    "diagnostic.errorSign": "îª‡ ",
    "diagnostic.messageLevel": "information", 
    "diagnostic.autoRefresh": true,
    "diagnostic.showUnused": true,
    "diagnostic.showDeprecated": true,
    "diagnostic.checkCurrentLine": true,
    "list.floatPreview": true,
    "list.source.location.defaultAction": "open",
    "list.source.location.defaultOptions": ["--first"],
    "json.schemaDownload.enable": true,
    "notification.disabledProgressSources": ["*"],
    "workspace.ignoredFolders": [
        "$HOME",
        "$HOME/.cargo/**",
        "$HOME/.rustup/**"
    ],
    // "html-css-support.styleSheets": [
    //     "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css",
    // ],
    "html-css-support.enabledLanguages": [
        "ejs",
        "html",
        "vue",
        "blade",
        "htmldjango",
        "typescriptreact",
        "javascriptreact",
    ],
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "",
        "borderhighlight": "CocFloating",
        "winblend": 10,
        "shadow": true,
    },
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true,
        "borderhighlight": "FloatBorder",
        "winblend": 10,
        "shadow": true,
        "focusable": true, 
        "maxHeight": 4,
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true,
        "borderhighlight": "CocFloating",
        "winblend": 10,
        "shadow": true,
        "focusable": true, 
    },
    "hover.floatConfig": {
        "border": true,
        "rounded": true,
        "borderhighlight": "CocFloating",
        "winblend": 10,
        "shadow": true,
        "focusable": true,
    },
}
